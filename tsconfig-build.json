{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/lib/*"]
    }
  },
  "include": ["src/lib/*.ts", "src/lib/*.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
